<div class="col-xs-12 col-sm-6 col-md-4">
    <div class="gallery_img">
        <figure>
            <img class="img-responsive" src="{{ asset('images/index/portfolio/' ~ image.file) }}" alt="{{ image.category.name }}">
        </figure>
        <div class="hover-overlay">
            <div class="overlay-content">
                <ul class="list-inline action-icons">
                    <li>
                        <a href="{{ asset('images/index/gallery/' ~ image.file) }}" data-toggle="tooltip" title="Quick View" class="gallery">
                            <i class="fa fa-eye"></i>
                        </a>
                    </li>
                    <li>
                        <a href="#" data-toggle="tooltip" title="Like">
                            <i class="fa fa-heart"></i>
                        </a>
                    </li>
                    <li>
                        <a href="#" data-toggle="tooltip" title="Download">
                            <i class="fa fa-download"></i>
                        </a>
                    </li>
                    <li>
                        <a href="#" data-toggle="tooltip" title="More Info">
                            <i class="fa fa-info"></i>
                        </a>
                    </li>
                </ul>
                <div class="image-stats">
                    <span><i class="fa fa-eye"></i> {{ image.numViews }}</span>
                    <span><i class="fa fa-heart"></i> {{ image.numLikes }}</span>
                    <span><i class="fa fa-download"></i> {{ image.numDownloads }}</span>
                </div>
            </div>
        </div>
    </div>
</div> 
